extends layout

block content
    .container-fluid
        include includes/layout_nav.pug

        .row
            .col-xs-12.col-sm-12.col-md-12.col-lg-12(style="margin-top:5px;")
                .form-group.col-md-2.hide
                    label(for='') Center Code
                    select#center_code.form-control(name='', required='')
                        option(value=cc) #{cc}
                .form-group.col-md-2
                    label(for='') Batch 
                         strong#stud_count.text-success 
                    select#batch_list.form-control(name='', required='')
                        option(value='0') ---Select--- 
                        option(value='1') Batch-1
                        option(value='2') Batch-2
                        option(value='3') Batch-3
                        option(value='4') Batch-4
                        option(value='5') Batch-5
                        option(value='6') Batch-6
                        option(value='7') Batch-7
                        option(value='8') Batch-8
                        option(value='9') Batch-9
                        option(value='10') Batch-10
                        option(value='11') Batch-11
                        option(value='12') Batch-12
                        option(value='13') Batch-13
                        option(value='14') Batch-14
                        option(value='15') Batch-15
                button#downloadStudentBatchWise.btn.btn-warning(type='button',style="margin-top:22px") Download Students
                button#refreshList.btn.btn-info(type='button',style="margin-top:22px;margin-left:5px;") Refresh
            .col-xs-1.col-sm-1.col-md-1.col-lg-1
            .col-xs-10.col-sm-10.col-md-10.col-lg-10(style="margin-top:10px;")
                h4.text-primary
                    caption 
                    small  
                    small.text-danger  
                table#student_list.table.table-striped.table-bordered.table-hover
                    thead
                        tr
                            th(width='10%') Roll No
                            th(width='30%') Name
                            th(width='15%') Application No
                            th(width='10%') Date Of Birth
                            th(width='5%') Key
                            th(width='10%') Contact No
                            th(width='10%') Status
                    tbody
                <div class="modal fade" id="modal-id">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Aouth</h4>
                            </div>
                            <div class="modal-body">
                                    <div class="form-group">
                                        <label for="">Enter Aouth Password</label>
                                        <input type="password" class="form-control" id="aouth_password">
                                    </div>
                            </div>
                            <div class="modal-footer">
                                button#downloadStudentBatchWise.btn.btn-warning(type='button',style="margin-top:22px") Download Students
                            </div>
                        </div>
                    </div>
                </div>
        .row
            .col-xs-1.col-sm-1.col-md-1.col-lg-1
            .col-xs-5.col-sm-5.col-md-5.col-lg-5#state_count
                          
block inline_css
    style.
        .nav-li{
            color:red
        } 
block css_link
    link(rel='stylesheet', href="/plugins/datatable/datatables.min.css")
block js_link
    script(src="/plugins/datatable/datatables.min.js")
    script(src="/js/exams.student.js")

block inline_js
    script.
        $(document).ready(function() {
            $('.student-active').addClass('active');
        });
    

       
        